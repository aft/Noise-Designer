var c = keyboard_lastchar;

if (keyboard_check_pressed(vk_anykey)) {
    seedInputVisible = true;
    
    if (k == vk_backspace) {
        // delete last character
        seedInput = string_copy(seedInput, 1, string_length(seedInput)-1);
    
    } else if (k == vk_enter) {
        if (seedInput!="") {
            // set seed
            updateSeed();
            pnGenerate();
        }
        
        // cancel
        seedInput = "";
        seedInputVisible = false;
        exit;
    
    } else if ( k &gt;= 48 &amp;&amp; k &lt;= 57) {
        // Add char to seed
        seedInput = seedInput + c;
        show_debug_message(seedInput);
    } else if (k == vk_escape) {
        
        // cancel
        seedInput = "";
        seedInputVisible = false;
        exit;
    }
}

if (play) {
    x += 1;
    pnGenerate();
}
